#!/bin/bash
# postrm script
#
# see: dh_installdeb(1)

function unlink_if_exists() {
    if [ -L "$1" ]; then
        echo "Unlinking $1 ..."
        unlink $1
    fi
}

function clean_up_if_exists() {
    if [ -f $1 ]; then
        echo "Deleting $1 ..."
        rm -f $1
    fi
}

unlink_if_exists /etc/nginx/sites-enabled/wlanpi_librespeed.conf
unlink_if_exists /etc/nginx/sites-enabled/wlanpi_webui.conf
unlink_if_exists /opt/wlanpi-webui/workingdirectory

clean_up_if_exists /var/www/librespeed/librespeed/garbage.dat

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
